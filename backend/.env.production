# Django Settings
DJANGO_SECRET_KEY=CAMBIAR-POR-UNA-CLAVE-SECRETA-SEGURA-DE-50-CARACTERES-MINIMO
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=tu-ip-elastica.compute.amazonaws.com,tu-dominio.com,localhost,127.0.0.1

# Base de datos SQLite (conserva tus datos actuales)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

